{
	"compilerOptions": {
		"target": "ES2021", // Modern JS target
		"module": "CommonJS", // Required for Node.js
		"rootDir": "src", // Your source files
		"outDir": "dist", // Compiled output
		"strict": true, // All strict type checks
		"esModuleInterop": true, // Allow default import compatibility
		"forceConsistentCasingInFileNames": true, // Avoid case mismatch issues
		"skipLibCheck": true, // Skip .d.ts checks for faster builds
		"moduleResolution": "node", // Resolve modules like Node
		"resolveJsonModule": true, // Allows importing .json files
		"types": ["node"], // Node.js + Jest types
		"allowSyntheticDefaultImports": true, // For cleaner imports
		"sourceMap": true // Helpful for debugging
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
